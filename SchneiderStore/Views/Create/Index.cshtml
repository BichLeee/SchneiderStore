@model SchneiderStore.Models.Order
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
	ViewData["Title"] = "Create Order";
	var message = TempData["resultMessage"]?.ToString();
}

@if (!string.IsNullOrWhiteSpace(message))
{
	<div class="toast-container position-fixed bottom-0 end-0 p-3">
		<div class="toast" role="alert" aria-live="assertive" aria-atomic="true">
			<div class="toast-header">
				<img src="..." class="rounded me-2" alt="...">
				<strong class="me-auto">Schneider Store</strong>
				<small>just now</small>
				<button type="button" class="btn-close" data-bs-dismiss="toast" aria-label="Close"></button>
			</div>
			<div class="toast-body">
				@message
			</div>
		</div>
	</div>
}

<h5 class="card py-2 shadow-sm" style="width: 200px; text-align: center; margin: 18px auto; border-radius: 10px;">
	CREATE ORDER
</h5>
<div class="card shadow" style="border: 1px solid #D9D9D9; width: 70%; margin: 30px auto;
    padding-inline: 50px; padding-top: 30px;">
	<form asp-action="Add">
		<div class="mt-4"><strong>Order infomation</strong></div>
		<div class="d-flex justify-content-between mt-3">
			<div class="d-flex align-items-center">
				<label asp-for="SalesOrder" class="form-label" style="width: 100px;">Sales Order :</label>
				<input asp-for="SalesOrder" type="text" class="form-control" style="width: 150px;">
			</div>
@*			<span asp-validation-for="Title" class="text-danger"></span>
*@			<div class="d-flex align-items-center">
				<label asp-for="WorkOrder" class="form-label" style="width: 100px;">Work Order :</label>
				<input asp-for="WorkOrder" type="text" class="form-control" style="width: 150px;">
			</div>
			<div class="d-flex align-items-center">
				<label asp-for="OrderStatus" class="form-label" style="width: 100px;">Order Status :</label>
				<select asp-for="OrderStatus" class="form-select text-center" aria-label="Order Status" style="width: 150px">
					<option value="Open">Open</option>
					<option value="Close">Close</option>
				</select>
			</div>
		</div>
		<div class="mt-4"><strong>Item infomation</strong></div>
		<div class="d-flex justify-content-between mt-4">
			<div>
				<div class="d-flex align-items-center">
					<label asp-for="SalesOrderItem" class="form-label" style="width: 120px">Sales Order Item :</label>
					<input asp-for="SalesOrderItem" type="text" class="form-control" style="width: 140px;">
				</div>
				<div class="d-flex align-items-center mt-4">
					<label asp-for="ProductID" class="form-label" style="width: 120px;">Product ID :</label>
					<input asp-for="ProductID" type="text" class="form-control" style="width: 140px;">
				</div>
			</div>
			<div>
				<div class="d-flex align-items-center">
					<label asp-for="OrderQty" class="form-label" style="width: 140px;">Order Quantity :</label>
					<input asp-for="OrderQty" type="number" class="form-control text-center" style="width: 150px;">
				</div>
				<div class="d-flex align-items-center mt-4">
					<label asp-for="ProductDes" class="form-label" style="width: 140px;">Product Description :</label>
					<input asp-for="ProductDes" type="text" class="form-control" id="product_des" style="width: 350px;">
				</div>
				
			</div>

		</div>
		<div class="d-flex justify-content-end mb-4 mt-5">
			<button type="submit" class="btn btn-success px-4">Create 🐇</button>
		</div>

	</form>
</div>
@section Scripts {
	@{
		await Html.RenderPartialAsync("_ValidationScriptsPartial");
	}
}